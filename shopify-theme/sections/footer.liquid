{%- style -%}
  .footer {
    color: rgba(var(--color-foreground), 0.75);
  }

  .footer__content-top {
    padding-bottom: 5rem;
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.2);
  }

  .footer__content-bottom {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .footer .grid {
    @media screen and (max-width: 749px) {
      display: block;
    }
  }

  .footer-block__heading {
    margin-bottom: 2rem;
  }

  .footer-block__details-content {
    margin-bottom: 2rem;
  }

  .footer-block__details-content > * {
    margin: 0;
  }

  .footer-block__details-content .list-unstyled {
    color: rgba(var(--color-foreground), 0.75);
  }

  .footer-block__details-content .placeholder-svg {
    max-width: 20rem;
    height: auto;
  }

  .footer-block-image {
    flex-shrink: 0;
  }

  .footer-block__brand-info {
    text-align: left;
  }

  .footer__list-social:empty {
    display: none;
  }

  .footer__list-social.list-unstyled {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    margin: 0;
  }

  .footer__list-social.footer-block__details-content {
    justify-content: flex-start;
    margin-bottom: 0;
  }

  .footer__list-social.list-unstyled li {
    margin: 0 1.3rem 1.3rem 0;
  }

  .footer__list-social .link {
    display: block;
    width: 4.4rem;
    height: 4.4rem;
  }

  .footer__list-social .link .icon {
    width: 2.2rem;
    height: 2.2rem;
  }

  .footer__copyright {
    text-align: center;
    margin-top: 3rem;
  }

  .footer__copyright .list-unstyled {
    color: rgba(var(--color-foreground), 0.75);
  }

  .footer__copyright a {
    color: rgba(var(--color-foreground), 0.75);
    text-decoration: none;
  }

  .footer__copyright a:hover {
    color: rgb(var(--color-foreground));
  }

  @media screen and (max-width: 749px) {
    .footer .grid__item {
      margin-bottom: 3rem;
    }
  }

  @media screen and (min-width: 750px) {
    .footer-block__heading {
      margin-bottom: 3rem;
    }
  }

  .footer__payment {
    margin-top: 1.5rem;
  }

  .footer__payment .list-payment {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.8rem;
  }

  .footer__payment .payment-icon {
    width: auto;
    height: 2.4rem;
  }

  @media screen and (min-width: 750px) {
    .footer__payment .list-payment {
      justify-content: flex-start;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_snapchat_link == blank and settings.social_pinterest_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif

    if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
      assign brand_empty = true
    endif

    if section.blocks.size == 1 and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
      assign only_menu_in_footer = true
    endif
  -%}

  <div class="footer__content-top page-width">
    <div class="container">
      <div class="grid grid--4-col-desktop grid--2-col-tablet grid--1-col{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- assign footer_blocks_per_row = 0 -%}
        {%- for block in section.blocks -%}
          {%- assign footer_blocks_per_row = footer_blocks_per_row | plus: 1 -%}
          <div class="footer-block grid__item{% if block.type == 'link_list' and block.settings.heading != blank %} footer-block--menu{% endif %}{% if only_menu_in_footer %} footer-block--only-menu{% endif %}" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'text' -%}
                <div class="footer-block__brand-info">
                  {%- if settings.brand_image != blank -%}
                    <div class="footer-block-image footer-block__brand-image">
                      {%- assign brand_image_height = settings.brand_image_width | divided_by: settings.brand_image.aspect_ratio -%}
                      {{ settings.brand_image | image_url: width: 600 | image_tag:
                        loading: 'lazy',
                        width: settings.brand_image_width,
                        height: brand_image_height,
                        class: 'footer__brand-image',
                        sizes: '(min-width: 750px) 150px, 100px',
                        widths: '50, 100, 150, 200, 300, 400, 550',
                        alt: settings.brand_image.alt | default: shop.name
                      }}
                    </div>
                  {%- else -%}
                    <h2 class="footer-block__heading h3 gradient-text">
                      {{ shop.name }}
                    </h2>
                  {%- endif -%}
                  
                  {%- if block.settings.heading != blank -%}
                    <h2 class="footer-block__heading h4">{{ block.settings.heading }}</h2>
                  {%- endif -%}
                  
                  {%- if block.settings.subtext != blank -%}
                    <div class="footer-block__details-content rte">
                      {{ block.settings.subtext }}
                    </div>
                  {%- endif -%}
                  
                  {%- if has_social_icons -%}
                    <ul class="footer__list-social list-unstyled footer-block__details-content" role="list">
                      {%- render 'social-icons' -%}
                    </ul>
                  {%- endif -%}
                </div>
              {%- when 'link_list' -%}
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading h4">{{ block.settings.heading | escape }}</h2>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer-block__details-content list-unstyled" role="list">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link">
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              {%- when 'image' -%}
                <div class="footer-block-image">
                  {%- if block.settings.image != blank -%}
                    {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                    <div class="footer-block__image-wrapper" style="max-width: min({{ block.settings.image_width }}px, 100%);">
                      <img
                        srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}, {{ block.settings.image | image_url: width: image_size_2x }} 2x"
                        src="{{ block.settings.image | image_url: width: 760 }}"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}"
                      >
                    </div>
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
            {%- endcase -%}
          </div>
        {%- endfor -%}
        
        {%- comment -%} Default footer content if no blocks {%- endcomment -%}
        {%- if section.blocks.size == 0 -%}
          <div class="footer-block grid__item">
            <h2 class="footer-block__heading h3 gradient-text">{{ shop.name }}</h2>
            <div class="footer-block__details-content">
              <p>Sua loja de joias premium com as melhores pe√ßas do mercado.</p>
            </div>
            {%- if has_social_icons -%}
              <ul class="footer__list-social list-unstyled" role="list">
                {%- render 'social-icons' -%}
              </ul>
            {%- endif -%}
          </div>
          
          <div class="footer-block grid__item">
            <h2 class="footer-block__heading h4">Links R√°pidos</h2>
            <ul class="footer-block__details-content list-unstyled" role="list">
              <li><a href="/pages/about" class="link link--text">Sobre N√≥s</a></li>
              <li><a href="/collections/all" class="link link--text">Produtos</a></li>
              <li><a href="/pages/contact" class="link link--text">Contato</a></li>
              <li><a href="/blogs/news" class="link link--text">Blog</a></li>
            </ul>
          </div>
          
          <div class="footer-block grid__item">
            <h2 class="footer-block__heading h4">Categorias</h2>
            <ul class="footer-block__details-content list-unstyled" role="list">
              <li><a href="/collections/aneis" class="link link--text">An√©is</a></li>
              <li><a href="/collections/correntes" class="link link--text">Correntes</a></li>
              <li><a href="/collections/relogios" class="link link--text">Rel√≥gios</a></li>
              <li><a href="/collections/brincos" class="link link--text">Brincos</a></li>
            </ul>
          </div>
          
          <div class="footer-block grid__item">
            <h2 class="footer-block__heading h4">Contato</h2>
            <div class="footer-block__details-content">
              <p>üìß contato@{{ shop.domain }}</p>
              <p>üì± (11) 99999-9999</p>
              <p>üìç S√£o Paulo, SP</p>
              <p>üïí Seg-Sex: 9h-18h</p>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="footer__content-bottom">
    <div class="footer__copyright container">
      <div class="grid grid--2-col-tablet grid--1-col">
        <div class="grid__item">
          <small class="copyright__content">¬© {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}</small>
          <small class="copyright__content">{{ powered_by_link }}</small>
        </div>
        <div class="grid__item">
          <div class="footer__payment">
            {%- if shop.enabled_payment_types.size > 0 -%}
              <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
              <ul class="list list-payment" role="list">
                {%- for type in shop.enabled_payment_types -%}
                  <li class="list-payment__item">
                    {{ type | payment_type_svg_tag: class: 'icon icon--full-color payment-icon' }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        </div>
      </div>
      
      <div class="footer__policy-links">
        {%- if section.settings.show_policy -%}
          {%- for policy in shop.policies -%}
            {%- if policy != blank -%}
              <a href="{{ policy.url }}" class="footer__policy-link">{{ policy.title | escape }}</a>
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
