{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign collection = collections[section.settings.collection] | default: collections.all
  assign products_to_display = section.settings.products_to_show | at_most: collection.products_count
-%}

<div class="featured-collection section-{{ section.id }}-padding">
  <div class="container">
    <div class="section-header text-center">
      {%- if section.settings.title != blank -%}
        <h2 class="section-title h2">
          {{ section.settings.title | escape }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="section-description">
          {{ section.settings.description | escape }}
        </p>
      {%- endif -%}
    </div>

    {%- if collection.products_count > 0 -%}
      <div class="products-grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col">
        {%- for product in collection.products limit: products_to_display -%}
          {% render 'product-card', product: product, section_id: section.id %}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all and collection.products_count > products_to_display -%}
        <div class="section-footer text-center">
          <a href="{{ collection.url }}" class="button button--secondary">
            {{ 'sections.featured_collection.view_all' | t }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="collection-empty text-center">
        <p>{{ 'sections.featured_collection.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="button">
          {{ 'general.continue_shopping' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .featured-collection {
    background-color: var(--color-black);
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-title {
    margin-bottom: 1rem;
  }

  .section-title span {
    color: var(--color-primary);
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .section-footer {
    margin-top: 2rem;
  }

  .collection-empty {
    padding: 4rem 0;
  }

  .collection-empty p {
    font-size: 1.125rem;
    color: var(--color-gray);
    margin-bottom: 2rem;
  }

  @media screen and (max-width: 749px) {
    .section-header {
      margin-bottom: 2rem;
    }
    
    .products-grid {
      gap: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "PRODUTOS EM DESTAQUE",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Descubra nossa seleção exclusiva de joias premium</p>",
      "label": "t:sections.featured-collection.settings.description.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "t:sections.featured-collection.settings.products_to_show.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.featured-collection.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.featured-collection.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.featured-collection.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "2",
      "label": "t:sections.featured-collection.settings.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-collection.settings.show_view_all.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}